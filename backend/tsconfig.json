{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    // Removed rootDir restriction to allow test files outside src
    // "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    // Add Vitest global types support to fix 'describe' not found error
    "types": [
      "node",
      "vitest/globals"
    ],
    // Add path aliases to match your project structure
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*",
    // Include test files so TypeScript recognizes Vitest globals
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "__tests__/**/*"
  ],
  "exclude": [
    "node_modules", 
    "dist",
    "coverage"
  ]
}